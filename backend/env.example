PORT=5000
NODE_ENV=development

# ============================================
# Supabase Database Configuration (Cloud)
# ============================================
# Get these from: Supabase Dashboard → Settings → Database → Connection pooler
# Your project: hr_management

# Connection Pooler Host (Recommended for Production)
# Format: aws-0-[region].pooler.supabase.com
# Example: aws-1-ap-south-1.pooler.supabase.com
DB_HOST=aws-1-ap-south-1.pooler.supabase.com

# Database Port (6543 for connection pooler, 5432 for direct connection)
DB_PORT=6543

# Database Name (usually "postgres" for Supabase)\

DB_NAME=postgres

# Database User (for pooler: postgres.[project-ref])
# Example: postgres.svrwksogtrkhpfyimlpl
DB_USER=postgres.svrwksogtrkhpfyimlpl

# Database Password (from Supabase Dashboard)
# Reset if needed: Supabase Dashboard → Settings → Database → Reset database password
DB_PASSWORD=your_supabase_database_password_here

# SSL Required for Supabase (must be true)
DB_SSL=true

# ============================================
# Supabase API Configuration
# ============================================
# Get these from: Supabase Dashboard → Settings → API

# Supabase Project URL
# Format: https://xxxxxxxxxxxxx.supabase.co
# Example: https://svrwksogtrkhpfyimlpl.supabase.co
SUPABASE_URL=https://svrwksogtrkhpfyimlpl.supabase.co

# Supabase Anon/Public Key (for client-side operations)
# Get from: Settings → API → Project API keys → anon public
# Safe to use in client-side code
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase Service Role Key (for server-side admin operations)
# Get from: Settings → API → Project API keys → service_role secret
# ⚠️ WARNING: Keep this secret! Never expose in client-side code
# Has admin privileges - use only in backend
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ============================================
# JWT Configuration
# ============================================
# Generate a random secret key for production
# You can use: openssl rand -base64 32
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d

# ============================================
# Cloudinary Configuration (Optional)
# ============================================
# Required only if you want to upload profile photos
# Sign up at: https://cloudinary.com (free tier available)
# Leave empty if not using image uploads
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# ============================================
# Admin User Creation (Optional)
# ============================================
# Used by: npm run create-admin
# These are the default credentials for the first admin user
ADMIN_EMAIL=admin@hr.com
ADMIN_PASSWORD=admin123
